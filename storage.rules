rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Función para verificar si el usuario está autenticado
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Función para verificar si el usuario es el propietario
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // Función para verificar si el usuario es administrador
    function isAdmin() {
      return isAuthenticated() && 
             request.auth.token.admin == true;
    }
    
    // Función para verificar si el archivo es una imagen válida
    function isValidImage() {
      return request.resource.contentType.matches('image/.*') &&
             request.resource.size < 10 * 1024 * 1024; // 10MB máximo
    }
    
    // Función para verificar si el archivo es un documento válido
    function isValidDocument() {
      return request.resource.contentType.matches('application/pdf') &&
             request.resource.size < 5 * 1024 * 1024; // 5MB máximo
    }
    
    // Imágenes de perfil de usuarios
    match /users/{userId}/profile/{fileName} {
      allow read: if true; // Las imágenes de perfil son públicas
      allow write: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidImage();
      allow delete: if isAuthenticated() && 
                       (isOwner(userId) || isAdmin());
    }
    
    // Documentos privados de usuarios (identificación, etc.)
    match /users/{userId}/documents/{fileName} {
      allow read: if isAuthenticated() && 
                     (isOwner(userId) || isAdmin());
      allow write: if isAuthenticated() && 
                      isOwner(userId) && 
                      isValidDocument();
      allow delete: if isAuthenticated() && 
                       (isOwner(userId) || isAdmin());
    }
    
    // Imágenes de listings
    match /listings/{listingId}/images/{fileName} {
      allow read: if true; // Las imágenes de listings son públicas
      allow write: if isAuthenticated() && 
                      isValidImage();
      allow delete: if isAuthenticated();
    }
    
    // Documentos de anfitriones (verificación, contratos, etc.)
    match /hosts/{hostId}/documents/{fileName} {
      allow read: if isAuthenticated() && 
                     (isOwner(hostId) || isAdmin());
      allow write: if isAuthenticated() && 
                      isOwner(hostId) && 
                      isValidDocument();
      allow delete: if isAuthenticated() && 
                       (isOwner(hostId) || isAdmin());
    }
    
    // Imágenes de verificación de anfitriones
    match /hosts/{hostId}/verification/{fileName} {
      allow read: if isAuthenticated() && 
                     (isOwner(hostId) || isAdmin());
      allow write: if isAuthenticated() && 
                      isOwner(hostId) && 
                      isValidImage();
      allow delete: if isAuthenticated() && 
                       (isOwner(hostId) || isAdmin());
    }
    
    // Archivos adjuntos en chats
    match /chats/{chatId}/attachments/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && 
                      (isValidImage() || isValidDocument());
      allow delete: if isAuthenticated();
    }
    
    // Imágenes de reseñas
    match /reviews/{reviewId}/images/{fileName} {
      allow read: if true; // Las imágenes de reseñas son públicas
      allow write: if isAuthenticated() && 
                      isValidImage();
      allow delete: if isAuthenticated();
    }
    
    // Archivos temporales (para procesamiento)
    match /temp/{userId}/{fileName} {
      allow read, write: if isAuthenticated() && 
                            isOwner(userId) && 
                            (isValidImage() || isValidDocument());
      allow delete: if isAuthenticated() && 
                       (isOwner(userId) || isAdmin());
    }
    
    // Archivos del sistema y administración
    match /admin/{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // Archivos públicos de la aplicación (logos, iconos, etc.)
    match /public/{allPaths=**} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Backups y exportaciones
    match /backups/{allPaths=**} {
      allow read, write: if isAdmin();
    }
    
    // Reportes generados
    match /reports/{allPaths=**} {
      allow read: if isAdmin();
      allow write: if false; // Solo Cloud Functions pueden escribir
    }
    
    // Reglas por defecto - denegar todo lo demás
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}